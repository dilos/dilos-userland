    value=$(COMPONENT_ARCHIVE_URL)
set name=opensolaris.arc_url \
    value=http://arc.opensolaris.org/caselog/LSARC/2008/191
set name=org.opensolaris.consolidation \
    value=$(CONSOLIDATION)


<transform file path=usr.*/man/.+ -> default mangler.man.stability uncommited>
<transform file -> add pkg.depend.bypass-generate usr/sfw/lib(.*)/lib(.*)>
set name=pkg.fmri \
    value=pkg:/editor/hexedit@$(IPS_COMPONENT_VERSION),$(BUILD_VERSION)
set name=pkg.summary \
    value="Hexedit - a command-line binary file editor"
set name=info.classification \
    value="org.opensolaris.category.2008:Applications/System Utilities" \
    value="org.opensolaris.category.2008:Development/Editors"
set name=info.source_url value=$(COMPONENT_ARCHIVE_URL)
set name=info.upstream_url value=http://merd.sourceforge.net/pixel/hexedit.html
set name=opensolaris.arc_url \
    value=http://arc.opensolaris.org/caselog/LSARC/2008/629
set name=org.opensolaris.consolidation value=$(CONSOLIDATION)
dir path=usr
dir path=usr/bin
dir path=usr/share
dir path=usr/share/man
dir path=usr/share/man/man1
file path=usr/bin/hexedit
file path=usr/share/man/man1/hexedit.1

legacy pkg=SUNWhexedit \
    desc="Hexedit - a command-line binary file editor (1.2.12)" \
    name="Hexedit"

license hexedit.license license=GPLv2
